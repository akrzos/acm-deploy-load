---
apiVersion: app.k8s.io/v1beta1
kind: Application
metadata:
  name: monitor-ztp-done
  namespace: ztp-day2-automation
spec:
  componentKinds:
    - group: apps.open-cluster-management.io
      kind: Subscription
  descriptor: {}
  selector:
    matchExpressions:
      - key: app
        operator: In
        values:
          - monitor-ztp-done
---
apiVersion: apps.open-cluster-management.io/v1
kind: Subscription
metadata:
  annotations:
    apps.open-cluster-management.io/git-branch: master
    apps.open-cluster-management.io/git-path: site-applications
    apps.open-cluster-management.io/reconcile-option: merge
  labels:
    app: monitor-ztp-done
  name: monitor-ztp-done-subscription
  namespace: ztp-day2-automation
spec:
  hooksecretref:
    name: aap-controller-token
  channel: gogs-repo-ns/gogs-repo
  placement:
    placementRef:
      apiGroup: apps.open-cluster-management.io
      kind: PlacementRule
      name: monitor-ztp-done-placement
---
apiVersion: apps.open-cluster-management.io/v1
kind: PlacementRule
metadata:
  name: monitor-ztp-done-placement
  namespace: ztp-day2-automation
spec:
  clusterConditions:
    - status: "True"
      type: ManagedClusterConditionAvailable
  clusterSelector:
    matchExpressions:
      - {key: ztp-done, operator: Exists}
